{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {

    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    },
    "types": [
      "babel__traverse",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/babel__traverse"
    ],

    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    ".expo/types/**/*.ts",

    "expo-env.d.ts",
    "app",
    "src"

  ],
  "exclude": ["node_modules"]
}
